{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "strumvg Configuration",
  "type": "object",
  "properties": {
    "colors": {
      "type": "object",
      "properties": {
        "arrows": {
          "description": "The color of the arrows.",
          "type": "string"
        },
        "rhythms": {
          "description": "The color of the rhythm text and stems below the arrows.",
          "type": "string"
        },
        "headers": {
          "description": "The color of the articulations and header text above the arrows.",
          "type": "string"
        }
      },
      "default": {
        "arrows": "#000000",
        "rhythms": "#555555",
        "headers": "#000000"
      }
    },
    "textSizes": {
      "type": "object",
      "properties": {
        "beatTextHeight": {
          "description": "The height of the space reserved for rhythm text below the arrows.",
          "type": "number"
        },
        "beatFontSize": {
          "description": "The relative font-size of the rhythm text below the arrows, as a fraction of its height (`beatTextHeight`).",
          "type": "number"
        },
        "headerTextHeight": {
          "description": "The height of the space reserved for articulations and header text above the arrows.",
          "type": "number"
        },
        "headerFontSize": {
          "description": "The relative font-size of the articulations and header text above the arrows, as a fraction of its height (`headerFontSize`).",
          "type": "number"
        },
        "tripletFontSize": {
          "description": "The actual font-size of the triplet label, if applicable.",
          "type": "number"
        }
      },
      "default": {
        "beatTextHeight": 30,
        "beatFontSize": 0.8,
        "headerTextHeight": 30,
        "headerFontSize": 0.8,
        "tripletFontSize": 14
      }
    },
    "strumSizes": {
      "type": "object",
      "properties": {
        "width": {
          "description": "The width of each strum arrow.\nThis is also the width of the space reserved for each \"rhythmic column\" composed of arrow, header text, and beat text.",
          "type": "number"
        },
        "height": {
          "description": "The height of each strum arrow.",
          "type": "number"
        },
        "gap": {
          "description": "The horizontal space between each strum ",
          "type": "number"
        }
      },
      "default": {
        "width": 20,
        "height": 80,
        "gap": 30
      }
    },
    "beamSizes": {
      "type": "object",
      "properties": {
        "strokeWidth": {
          "description": "The stroke width of the rhythm stems/beams below the arrows.",
          "type": "number"
        },
        "stemHeight": {
          "description": "The vertical length of the beam stems.",
          "type": "number"
        }
      },
      "default": {
        "strokeWidth": 2,
        "stemHeight": 8
      }
    },
    "fonts": {
      "type": "object",
      "properties": {
        "strumHeader": {
          "description": "Font styling for header text.",
          "$ref": "#/definitions/font"
        },
        "arrowText": {
          "description": "Font styling for text inserted in place of arrows.",
          "$ref": "#/definitions/font"
        },
        "countChar": {
          "description": "Font styling for rhythm count text.",
          "$ref": "#/definitions/font"
        },
        "tripletText": {
          "description": "Font styling for triplet labels (\"3\"), if applicable.",
          "$ref": "#/definitions/font"
        }
      }
    }
  },
  "definitions": {
    "font-family": {
      "type": "string",
      "examples": [
        "sans-serif",
        "serif",
        "monospace",
        "cursive",
        "sans-serif",
        "sans-serif"
      ]
    },
    "font-weight": {
      "oneOf": [
        {
          "enum": [
            "normal",
            "bold",
            "bolder",
            "lighter"
          ]
        },
        {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        }
      ],
      "examples": [
        100,
        200,
        300,
        400,
        500,
        600,
        700,
        800,
        900
      ]
    },
    "font-style": {
      "enum": [
        "normal",
        "italic",
        "oblique"
      ]
    },
    "font": {
      "type": "object",
      "properties": {
        "family": {
          "$ref": "#/definitions/font-family"
        },
        "weight": {
          "$ref": "#/definitions/font-weight"
        },
        "style": {
          "$ref": "#/definitions/font-style"
        }
      }
    }
  }
}
